{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/risk-register.schema.json",
  "title": "Risk Register for 5x5 Matrix",
  "type": "object",
  "required": [
    "assets"
  ],
  "properties": {
    "assets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "likelihood",
          "impact"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "sector": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "Threat",
              "Hazard",
              "Opportunity",
              "Dependency"
            ]
          },
          "likelihood": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "impact": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "notes": {
            "type": "string"
          },
          "v": {
            "type": "integer",
            "minimum": 1,
            "maximum": 25,
            "description": "Computed in app as L x I"
          },
          "tier": {
            "type": "string",
            "enum": [
              "Low",
              "Moderate",
              "High",
              "Critical"
            ],
            "description": "Computed in app from thresholds"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "examples": [
    {
      "assets": [
        {
          "name": "Sudan conflict",
          "sector": "Security/Armed Conflict",
          "type": "Threat",
          "likelihood": 4,
          "impact": 5,
          "notes": "Escalated kinetic risk"
        },
        {
          "name": "Cote d'Ivoire example",
          "sector": "Geopolitical/Socioeconomic",
          "type": "Threat",
          "likelihood": 2,
          "impact": 4
        }
      ]
    }
  ]
}